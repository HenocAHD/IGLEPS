---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.css'

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="La Iglesia Evangélica Pentecostés El Buen Samaritano es una
    organización cristiana,compuestapor personas regeneradas por la gracia
    de jesucristo,sujetas y dóciles a la dirección del espíritu santo,la
    instrucción de la palabra de Dios y la guía espiritualy administrativa
    de sus autoridades eclesiales."
    />
    <meta name="google-site-verification" content="j4Fjv_8OlDgpMokyyArNPykV3Edzclll140djAYx7xs" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link href="https://css.gg/css" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="font-Poppins">
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>
