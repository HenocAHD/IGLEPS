---
interface Props {
  id:string
  title: string;
  subtitle: string
}

const {id, title, subtitle } = Astro.props;
---

<section class="flex flex-col w-full items-center gap-2" id={id}>
    <hr class="w-3/4 p-4">
    <h2 class="text-center text-xs text-rose-600 font-bold uppercase">{title}</h2>
    <h3 class="text-center text-2xl lg:text-4xl font-semibold uppercase">{subtitle}</h3>
</section>
