---
interface Props {
  icon: string;
  title: string;
  text: string
}

const { icon, title, text } = Astro.props;
---

<section class="flex flex-col gap-4 w-full h-auto">
  <i class:list={[icon, 'text-center', 'text-rose-600', 'text-5xl']}></i>
  <h2 class="font-bold text-2xl pt-2 text-center">{title}</h2>
  <p class="text-justify leading-8">{text}</p>
</section>
