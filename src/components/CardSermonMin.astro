---
interface Props {
  img: string;
  title: string;
  date: string
}

const { img, title, date} = Astro.props;
---

<section class="flex flex-row gap-4">
    <img src=`${img}` alt="" class="w-[70px] h-16 rounded-lg object-cover">
    <div>
        <h2 class="text-white ">{title}</h2>
        <footer class="text-gray-500 text-xs">{date}</footer>
    </div>
</section>